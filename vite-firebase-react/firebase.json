{
  "hosting": {
    "public": "dist",

    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/form",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "database": {
    "rules": "database.rules.json"
  }
}
